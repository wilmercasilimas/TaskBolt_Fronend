{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "no-unused-vars": ["error", { "varsIgnorePattern": "^(Icono|[A-Z_])" }],
    "react/react-in-jsx-scope": "off"   // ✅ ESTA LÍNEA ES LA QUE TE FALTA
  }
}
